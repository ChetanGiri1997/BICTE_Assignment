@model EmployeeManagementSystem.Models.Qualification
@{
    ViewData["Title"] = "Add Qualification";
}

<h2>Add Qualification</h2>

<form asp-action="AddQualification" method="post">
    <input type="hidden" asp-for="EmployeeId" />
    <div class="form-group">
        <label asp-for="Course" class="control-label"></label>
        <input asp-for="Course" class="form-control" />
        <span asp-validation-for="Course" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="YearPassed" class="control-label"></label>
        <input asp-for="YearPassed" class="form-control" type="number" />
        <span asp-validation-for="YearPassed" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MarksPercentage" class="control-label"></label>
        <input asp-for="MarksPercentage" class="form-control" type="number" step="0.01" min="0" max="100" />
        <span asp-validation-for="MarksPercentage" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Add" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}