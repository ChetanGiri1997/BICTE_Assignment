@model EmployeeManagementSystem.Models.Employee
@{
    ViewData["Title"] = "Delete Employee";
}

<h2>Delete Employee</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@Model.Name</h4>
    <dl class="row">
        <dt class="col-sm-2">DOB</dt>
        <dd class="col-sm-10">@Model.DOB.ToShortDateString()</dd>
        <dt class="col-sm-2">Contact Address</dt>
        <dd class="col-sm-10">@Model.ContactAddress</dd>
        <dt class="col-sm-2">Qualifications</dt>
        <dd class="col-sm-10">
            @if (Model.Qualifications != null && Model.Qualifications.Any())
            {
                <ul>
                    @foreach (var qual in Model.Qualifications)
                    {
                        <li>@qual.Course (@qual.YearPassed, @qual.MarksPercentage%)</li>
                    }
                </ul>
            }
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>